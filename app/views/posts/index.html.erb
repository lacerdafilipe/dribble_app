<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <%if user_signed_in?%>
      <p class="lead"><strong>What are you working on?</strong> Dribbble is where designers get inspired and Add a new Insparetion.</p>
      <p><%= link_to "New Insparetion" '<i class="fa fa-long-arrow-right fa-white"></i>'.html_safe, new_post_path(@post), :class=> "btn btn-primary" %></p>
    <%else%>
      <p class="lead"><strong>What are you working on?</strong> Dribbble is where designers get inspired and hired.</p>
      <p><%= link_to "Continue" '<i class="fa fa-long-arrow-right fa-white"></i>'.html_safe, user_session_path, :class=> "btn btn-primary" %></p>
    <%end%>
  </div>
</div>

<div class="container">
  <div id="posts">
    <% @post.each do |post| %>
      <div class="post">
        <div class="post_image">
          <%= link_to (image_tag post.image.url(:thumb)), post %>
        </div>
        <div class="post_content">
          <div class="title">
            <h2><%= link_to post.title, post%></h2>
          <div class="data clearfix">
            <p class="username">Shared by <strong><%= post.user.name%></strong></p>
            <p class="buttons">
              <span class="fa fa-thumbs-o-up"> <%= post.get_upvotes.size%></span>
              <span class="fa fa-thumbs-o-down"> <%= post.get_downvotes.size%></span>
            </p>
          </div>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>
