<h1>Show Post</h1>
<p><%= image_tag @post.image.url(:medium)%></p>
<p><%= @post.title %></p>
<p><%= @post.link %></p>
<p><%= @post.description %></p>
<strong><p>by <%= @post.user.name%></p></strong>


<h2><%=coment_count = pluralize(@post.coments.count, "Comments")%></h2>
  <%@coments.each do |coment|%>
    <strong><p><%= coment.user.name%>:</p></strong>
    <p><%= coment.content%></p>
  <%end%>

  <%= render 'coments/form' %>

<% if user_signed_in? %>
  <p><%= link_to "Delete", @post, method: :delete,
                            :data => {confirm: "Are you sure?"}%>
      | <%= link_to "Back", root_path %>
      | <%= link_to "Edit", edit_post_path(@post)%>
  </p>
<%end%>
