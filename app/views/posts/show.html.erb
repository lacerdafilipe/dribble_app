<h1>Show Post</h1>
<p><%= image_tag @post.image.url(:medium)%></p>
<p><%= @post.title %></p>
<p><%= @post.link %></p>
<p><%= @post.description %></p>
<strong><p>by <%= @post.user.name%></p></strong>

<% if user_signed_in? %>

  <%= @post.get_upvotes.size%>
  <%= link_to '<i class="fa fa-thumbs-o-up"></i>'.html_safe, like_post_path(@post), method: :get %> &nbsp
  <%= @post.get_downvotes.size%>
  <%= link_to '<i class="fa fa-thumbs-o-down"></i>'.html_safe, dislike_post_path(@post), method: :get %>

<%else%>
  <%=@post.get_upvotes.size %> <i class="fa fa-thumbs-o-up"></i>
  <%= @post.get_downvotes.size%>&nbsp <i class="fa fa-thumbs-o-down"></i>
<%end%>

<h2><%=coment_count = pluralize(@post.coments.count, "Comments")%></h2><br>
  <%@coments.each do |coment|%>
      <p><strong><%= coment.user.name%>:</p>
      <p></strong><%= coment.content%></p>
  <%end%>

  <%= render 'coments/form' %>

<% if can? :update, @post %>
  <p><%= link_to "Delete", @post, method: :delete,
                            :data => {confirm: "Are you sure?"}%>
      | <%= link_to "Edit", edit_post_path(@post)%>
  </p>
<%end%>
